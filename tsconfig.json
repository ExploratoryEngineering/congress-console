{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowJs": true,
    "sourceRoot": "src",
    "baseUrl": "src",
    "compileOnSave": false,
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "Services/*": [
        "services/*"
      ],
      "Helpers/*": [
        "helpers/*"
      ],
      "Models/*": [
        "models/*"
      ],
      "Components/*": [
        "components/*"
      ],
      "Dialogs/*": [
        "dialogs/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
